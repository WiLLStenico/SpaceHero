<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidbrasilprojetos.games.spacehero"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!-- 
        the tag configChanges prevent the game reset whene the user
        open a hardware keyboard, like in a milestone 2 phone
         -->
        <activity
            android:configChanges="keyboardHidden|orientation|screenSize|keyboard"
            android:name=".SpaceHero"
            android:label="@string/title_activity_space_hero" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>